<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.caprispine.caprispine.activity.assessment.add.AddPainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="Chief Complaint"></android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_bp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:hint="Blood Pressure (Systolic/Diastolic)"
                        android:imeOptions="actionNext" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Temperature"
                        android:imeOptions="actionNext" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_heart_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Heart Rate"
                        android:imeOptions="actionNext" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_resp_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Respiratory Rate"
                        android:imeOptions="actionNext" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_posture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Posture"
                        android:imeOptions="actionDone" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_gait"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Gait"
                        android:imeOptions="actionDone" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_scar_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Scar Description (If any)"
                        android:imeOptions="actionDone" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_swelling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Swelling (If any)"
                        android:imeOptions="actionDone" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tightness/Contracture/Deformity (If any)"
                        android:imeOptions="actionDone" />


                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:contentDescription="@string/app_name"
        android:text="SAVE"
        android:textColor="@color/white" />

</LinearLayout>
